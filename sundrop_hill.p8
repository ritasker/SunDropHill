-- player --

function iplr()
 plr={
  x=63,
  y=63  
 }
end

function uplr()
 -- move
 if btn(➡️) then
  plr.x+=1
 elseif btn(⬅️) then
  plr.x-=1
 elseif btn(⬆️) then
  plr.y-=1
 elseif btn(⬇️) then
  plr.y+=1
 end
 
 -- plant seeds
 local ptx=flr((plr.x+4)/8)
 local pty=flr((plr.y+4)/8)
  
 if btn(❎) then
  local pt=mget(ptx,pty)
  
  if pt==0 or pt==1 then
   mset(ptx,pty,2)
  elseif pt==2 then
  	mset(ptx,pty,3)
  end
 end
 
 
end

function dplr()
 spr(12,plr.x,plr.y)
end
